// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Client {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  requests  Request[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Assistant {
  id        String    @id @default(uuid())
  name      String
  team      Team?     @relation(fields: [teamId], references: [id], onDelete: SetNull)
  teamId    String?
  requests  Request[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Team {
  id         String      @id @default(uuid())
  name       String      @unique
  subject    Subject?
  assistants Assistant[]
  requests   Request[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Request {
  id          String     @id @default(uuid())
  status      String
  desc        String
  subjectId   String
  subject     Subject    @relation(fields: [subjectId], references: [id], onDelete: NoAction)
  client      Client     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId    String
  team        Team?      @relation(fields: [teamId], references: [id], onDelete: SetNull)
  teamId      String?
  assistant   Assistant? @relation(fields: [assistantId], references: [id], onDelete: SetNull)
  assistantId String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Subject {
  id        String    @id @default(uuid())
  name      String    @unique
  Request   Request[]
  Team      Team      @relation(fields: [teamId], references: [id], onDelete: NoAction)
  teamId    String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
