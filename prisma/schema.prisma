// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Client {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  requests Request[]
}

model Assistant {
  id       Int       @id @default(autoincrement())
  name     String
  team     Team?     @relation(fields: [teamId], references: [id], onDelete: SetNull)
  teamId   Int?
  requests Request[]
}

model Team {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  subject    Subject?
  assistants Assistant[]
  requests   Request[]
}

model Request {
  id          Int        @id @default(autoincrement())
  status      String
  desc        String
  subjectId   Int
  subject     Subject    @relation(fields: [subjectId], references: [id], onDelete: NoAction)
  client      Client     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId    Int
  team        Team?      @relation(fields: [teamId], references: [id], onDelete: SetNull)
  teamId      Int?
  assistant   Assistant? @relation(fields: [assistantId], references: [id], onDelete: SetNull)
  assistantId Int?
}

model Subject {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  Request Request[]
  Team    Team      @relation(fields: [teamId], references: [id], onDelete: NoAction)
  teamId  Int       @unique
}
